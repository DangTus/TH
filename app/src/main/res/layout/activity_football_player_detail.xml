<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="@drawable/background_gradient_vertical">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="50dp"
                android:text="Cristiano Ronaldo"
                android:textColor="#fff"
                android:textSize="35sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/priceLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:layout_below="@+id/nameTextView">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_us_dollar" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="200.000.000"
                    android:textColor="#fff"
                    android:textSize="20sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/likeIMV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/priceLayout"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="8dp"
                android:onClick="likeProduct"
                android:src="@drawable/ic_unlike" />

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_content_detail" />

            <ImageView
                android:id="@+id/avataIMV"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="32dp"
                android:src="@drawable/img_harry_maguire"
                android:scaleType="fitEnd"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/contentPanel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"

            android:background="@color/grayBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="32dp"
                android:paddingTop="32dp"
                android:layout_above="@id/buyProductLayout"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Câu lạc bộ hiện tại"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/club"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Club"
                    android:textSize="18sp"
                    android:textColor="@color/grayText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kỹ thuật"
                    android:textColor="@color/gray"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"/>

                <RatingBar
                    android:id="@+id/skillRatingBar"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:isIndicator="true"
                    android:numStars="6"
                    android:progressTint="@color/colorPrimary"
                    android:rating="2"
                    android:secondaryProgressTint="@color/colorPrimary"
                    android:stepSize="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Số lượng"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/gray"
                    android:layout_marginTop="16dp"
                    android:layout_below="@id/club" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center">

                    <ImageButton
                        android:onClick="changeQuantityProduct"
                        android:id="@+id/quantityMinus"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="@drawable/background_productdetail_quantity_button_minus"
                        android:src="@drawable/ic_minus" />

                    <ImageButton
                        android:onClick="changeQuantityProduct"
                        android:id="@+id/quantityPlus"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_plus"
                        android:background="@drawable/background_productdetail_quantity_button_plus" />

                    <TextView
                        android:id="@+id/quantity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray"
                        android:layout_marginLeft="16dp"
                        android:layout_below="@id/club" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/buyProductLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="#fff"
                android:paddingHorizontal="32dp"
                android:paddingVertical="16dp"
                android:gravity="center_vertical"
                android:weightSum="5"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buyProductButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_gradient_horizontal"
                    android:drawableEnd="@drawable/ic_buynow"
                    android:drawablePadding="16dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="16dp"
                    android:text="Mua ngay"
                    android:textAlignment="viewStart"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>